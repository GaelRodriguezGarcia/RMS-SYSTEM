        //- type input for the full name 
        input#lname.form-control.names(type='text' aria-label='Last name' placeholder='Last' name='lname' )
        input#fname.form-control.names(type='text' aria-label='First name' placeholder='First' name='fname')
        input#mname.form-control.names(type='text' aria-label='Middle name' placeholder='Middle' name='mname')
