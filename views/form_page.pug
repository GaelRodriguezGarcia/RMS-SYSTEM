      .row
        .col-1-2
          .input-group.mb-3
            span#inputGroup-sizing-default.input-group-text Occurance time
            //- input for dating the time
            input.form-control(type='time' name='time' aria-label='Text input with dropdown button')
        .col-1-2
          .input-group.mb-3
            label.input-group-text(for='inputGroupSelect01') Incident type
            //- indicent input for puting in code for the type of incident
            input.form-control(type='text' name='type')
      .row
        .col-1-2
          .input-group.mb-3
            span#inputGroup-sizing-default.input-group-text Code
            //- input for puting in code for the type of incident
            input.form-control(type='text' name='code'Â  aria-label='Sizing example input' aria-describedby='inputGroup-sizing-default')
        .col-1-2
          .input-group.mb-3
            span#inputGroup-sizing-default.input-group-text Location
            //- input to type in the address of where the issue was located
            input.form-control(type='text' name='location' aria-label='Text input with dropdown button')
      .input-group.mb-3
        label.input-group-text(for='inputGroupSelect01' name='sex') Gender
        //- input to choose the gnder of the accused 
        select#inputGroupSelect01.form-select
          option(selected='') Choose...
          option#male.Genders(value='1') Male
          option#female.Genders(value='2') Female
          option#unkown.Genders(value='3') Unknown
      .input-group
